<assembly>
    <id>bin</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <fileSets>
        <!-- bin 目录 -->
        <fileSet>
            <directory>${build.dir}/scripts</directory>
            <includes>
                <include>*.sh</include>
                <include>*.txt</include>
            </includes>
            <outputDirectory>bin</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>

        <!-- conf 目录 -->
        <fileSet>
            <directory>${project.build.directory}/classes</directory>
            <includes>
                <include>*.properties</include>
                <include>*.config</include>
            </includes>
            <outputDirectory>conf</outputDirectory>
            <fileMode>0755</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/classes/log</directory>
            <outputDirectory>conf/log</outputDirectory>
            <fileMode>0755</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/classes/config</directory>
            <outputDirectory>conf/config</outputDirectory>
            <fileMode>0755</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>

        <!-- 著作权、readme、版本说明 -->
        <fileSet>
            <directory>src/main/assembly/script</directory>
            <includes>
                <include>readme.txt</include>
            </includes>
            <outputDirectory>/</outputDirectory>
            <fileMode>0755</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>
    </fileSets>
    <dependencySets>
        <!-- jar包目路 -->
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
        </dependencySet>
    </dependencySets>
</assembly>